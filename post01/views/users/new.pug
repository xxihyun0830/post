extends ../layout

block content
  .container
    h1.main-title 신규 등록
    form(action='/users', method = 'POST')
      .form-group
        label(for='name') Name
        input.form-control(
            type='text',
            id = 'name',
            name = 'name',
            placeholder = 'Your name')
      .form-group
        label(for='email') Email address
        input.form-control(
            type='email',
            id = 'email',
            name = 'email',
            placeholder = 'Your email address') 
      .form-group
        label(for='password') Password
        input.form-control(
            type = 'password',
            id = 'password',
            name = 'password',
            placeholder = 'your password')
      a.btn.btn-outline-secondary(href='users') List
      |
      button.btn.btn-primary(type = 'submit') Register